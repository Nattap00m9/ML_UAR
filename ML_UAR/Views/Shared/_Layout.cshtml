@inject IConfiguration configuration

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ML_UAR</title>
    <link href="~/lib/adminlte/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/adminlte/dist/css/adminlte.min.css" rel="stylesheet" />
    <link href="~/lib/adminlte/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css" rel="stylesheet" />
    <link href="~/lib/adminlte/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/lib/adminlte/plugins/datatables-responsive/css/responsive.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/lib/multiple-select/multiple-select.min.css" rel="stylesheet" />
    <link href="~/lib/multiple-select/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-datepicker/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="~/lib/adminlte/plugins/select2/css/select2.min.css" rel="stylesheet">
    <link href="~/lib/adminlte/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css" rel="stylesheet">
    <link href="~/lib/adminlte/plugins/icheck-bootstrap/icheck-bootstrap.min.css" rel="stylesheet">
    <link href="~/css/app.css" rel="stylesheet" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/icon_web.ico" sizes="32x32">
</head>
<body class="hold-transition sidebar-mini sidebar-collapse">

    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>

        </nav>

        @await Html.PartialAsync("_SidebarLayout.cshtml")


        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            @await Html.PartialAsync("_Breadcrumb.cshtml")
                        </div>
                    </div>
                </div>
            </section>
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </section>

        </div>

        <footer class="main-footer">
            <strong>Copyright &copy; 2023 <b>@configuration["Config:SiteTitle"]</b>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> @configuration["Config:Version"]
            </div>
        </footer>

    </div>

    @*Loading*@
    <div class="overlay container-fluid">
        <img class="imgloading" src="~/images/loading.gif" alt="Loading..." />
    </div>

    <script src="~/lib/adminlte/plugins/jquery/jquery.min.js"></script>
    <script src="~/lib/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/adminlte/dist/js/adminlte.min.js"></script>
    <script src="~/lib/adminlte/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/lib/adminlte/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/adminlte/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/adminlte/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/adminlte/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/lib/adminlte/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/adminlte/plugins/jquery-validation/additional-methods.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <script src="~/lib/htmx/htmx.min.js"></script>
    <script src="~/lib/adminlte/plugins/select2/js/select2.full.min.js"></script>
    <script src="~/lib/adminlte/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/menu.js"></script>

    <script>

        $(document).ready(function () {

            //$('#idDivfooter').hide();

            $('.select2bs4').select2({
                theme: 'bootstrap4'
            });

            $(".search-placeholder").prepend("<option value='' selected>--- กรุณาเลือกข้อมูล ---</option>");

            $(".select-placeholder").prepend("<option value='' disabled selected>--- กรุณาเลือกข้อมูล ---</option>");

        });

    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
